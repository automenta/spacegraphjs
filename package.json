{
    "name": "spacegraph-zui",
    "version": "0.1.0",
    "description": "A general-purpose, extensible JavaScript library for creating Zooming User Interfaces (ZUI) with 2D and 3D visualizations.",
    "main": "dist/spacegraph.umd.js",
    "module": "dist/spacegraph.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "README.md",
        ".github"
    ],
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "build": "npm run format && npm run lint && npm run build:types && vite build --config vite.lib.config.js",
        "build:demo": "npm run format && npm run lint && vite build --outDir dist-demo",
        "test": "vitest --run",
        "docs:build": "jsdoc -c jsdoc.conf.json",
        "docs:view": "serve ./docs/api -l 8080",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
        "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
        "start": "npx vite dev",
        "build:watch": "vite build --watch",
        "build:gh-pages": "mkdir -p docs && cp index.html docs/index.html && echo '<h1>Test Page</h1><p>This is docs/test.html</p>' > docs/test.html && echo 'Content of root index.html that will be copied:' && cat index.html"
    },
    "author": "SpaceGraph Contributors",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TTime/spacegraphjs.git"
    },
    "keywords": [
        "zui",
        "zoomable interface",
        "graph",
        "graph visualization",
        "data visualization",
        "2d",
        "3d",
        "webgl",
        "threejs",
        "gsap",
        "javascript",
        "library"
    ],
    "bugs": {
        "url": "https://github.com/TTime/spacegraphjs/issues"
    },
    "homepage": "https://github.com/TTime/spacegraphjs#readme",
    "dependencies": {
        "chart.js": "^4.5.0",
        "gsap": "^3.13.0",
        "postprocessing": "^6.37.4",
        "three": "^0.177.0"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@eslint/js": "^9.8.0",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^9.30.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^16.2.0",
        "jsdoc": "^4.0.4",
        "jsdom": "^24.0.0",
        "prettier": "^3.3.3",
        "serve": "^14.2.4",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^1.6.1"
    },
    "overrides": {
        "vite": {
            "esbuild": "^0.25.0"
        },
        "vite-node": {
            "esbuild": "^0.25.0"
        }
    }
}
